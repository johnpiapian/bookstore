{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": {
    "nodejs-typescript-modern-starter": "dist/src/index.js",
    "ntms": "dist/src/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "bundle": "rimraf dist && esbuild --outdir=dist --sourcemap --bundle --platform=node --target=node20.10.0 ./src/index.ts",
    "dev": "nodemon --watch src --watch test --ext ts,json --exec 'npm run bundle && NODE_ENV=development npm run start'",
    "debug": "npm run bundle && node --enable-source-maps --inspect-brk ./dist/index.js",
    "debug:test": "node --inspect-brk ./node_modules/.bin/jest --runInBand .",
    "start": "node --enable-source-maps ./dist/index.js",
    "test": "jest --runInBand ."
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@jest/globals": "29.7.0",
    "@tsconfig/node20": "20.1.6",
    "@types/express": "^5.0.5",
    "@types/jest": "29.5.14",
    "@types/node": "20.19.23",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "esbuild": "0.21.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "jest": "29.7.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "rimraf": "5.0.10",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.19.2"
  }
}
